 <!-- modal -->
 <div class="row">
   <div class="col-12">
     <div class="card">
       <div class="card-header">
         <h3 class="card-title">Quản lý vận chuyển</h3>

         <form action="/admin/transport/" method="GET">
           <label class="form-inline justify-content-end">
             Tìm kiếm tên tỉnh: <input type="search" name="search" class="form-control" value="<%= search %>">
             <button class="btn btn-danger" type="submit">Tìm</button>
           </label>
         </form>
       </div>

       <!-- /.card-header -->
       <div class="card-body table-responsive p-0">
         <table class="table table-hover text-nowrap">
           <thead>
             <tr>
               <th>ID</th>
               <th>Tên tỉnh</th>
               <th>Giá vận chuyển</th>
               <th></th>
               <th></th>
             </tr>
           </thead>
           <tbody>
             <% for (const transport of transports){ %>
             <tr>
               <td><%= transport.id %></td>
               <td><%= transport.province.name %></td>
               <td><%= helpers.formatMoney(transport.price)%>₫</td>
               <td><a type="button" class="btn btn-block btn-info" href="/admin/transport/edit/<%= transport.id %>">Sửa</a></td>
               <!-- <td>
                 <button data-href="?c=post&a=destroy&id=36" type="button" class="btn btn-block btn-danger destroy" data-toggle="modal" data-target="#exampleModal">
                   Xóa
                 </button>
               </td> -->
             </tr>
             <%}%>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
   
    <!-- Paging -->
   <%- include('../pagination') %>
             <!-- End paging -->

             <!-- Button trigger modal -->
             <!-- Modal -->
             <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
               <div class="modal-dialog" role="document">
                 <div class="modal-content">
                   <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Bạn chắc là muốn xóa?</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                       <span aria-hidden="true">&times;</span>
                     </button>
                   </div>
                   <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                     <a type="button" class="btn btn-primary">Có</a>
                   </div>
                 </div>
               </div>
             </div>